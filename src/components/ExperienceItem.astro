---
export interface Props{
    title: string
    company: string
    description: string
    date: string
}
const {title, company, description, date} = Astro.props
---
<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
<time class="mb-1 text-sm font-normal leading-none text-yellow-400/80">
    {date}
</time>
<h3 class="text-lg font-semibold text-purple-700">
	{title}
</h3>
<p class="mb-1 text-sm font-medium text-gray-400">
    {company}
</p>
<p class="mb-4 text-base font-normal text-gray-200 text-pretty">
	{description}
</p>
