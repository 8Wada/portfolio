<style>
  .bento-card {
    @apply overflow-hidden rounded-3xl 
           backdrop-blur-xl border border-black/5 dark:border-white/10
           transition-all duration-300 hover:scale-[1.01]
           hover:bg-white/10 dark:hover:bg-white/15
           shadow-inner shadow-white/10;
  }

  .profile-gradient {
    @apply bg-gradient-to-br from-teal-400/20 via-emerald-500/20 to-cyan-600/20
           dark:from-teal-950 dark:via-emerald-950 dark:to-cyan-950;
  }

  .social-icon-btn {
    @apply flex items-center justify-center p-4 
           rounded-2xl bg-white/10 dark:bg-white/5
           transition-all duration-300;
  }

  .contact-btn {
    @apply flex items-center justify-center px-6 py-3 
           rounded-xl bg-emerald-500/10 hover:bg-emerald-500/20
           dark:bg-emerald-400/10 dark:hover:bg-emerald-400/20
           transition-all duration-300 text-sm;
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out;
  }

  .animate-fade-in-delay {
    animation: fadeIn 0.8s ease-out 0.2s both;
  }

  .animate-fade-in-delay-2 {
    animation: fadeIn 0.8s ease-out 0.4s both;
  }

  .animate-fade-in-delay-3 {
    animation: fadeIn 0.8s ease-out 0.6s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in,
    .animate-fade-in-delay,
    .animate-fade-in-delay-2,
    .animate-fade-in-delay-3 {
      animation: none;
    }
  }
</style>